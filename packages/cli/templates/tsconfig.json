{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "allowJs": true,
    "noEmit": true,
    "paths": {
      "@/*": ["./src/*"],
      "@assets/*": ["./src/assets/*"],
      "@components/*": ["./src/components/*"],
      "@static/*": ["./src/static/*"],
      "@pages/*": ["./src/pages/*"],
      "@tags/*": ["./src/tags/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
